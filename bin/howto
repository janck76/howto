#!/bin/bash -
#===============================================================================
#
#          FILE:  howto
#
#         USAGE:  howtow [FILE]
#
#   DESCRIPTION:
#   zsh completion: $HOME/.zsh_custom/completions/_howto
#
#===============================================================================

dir=~/howto
file=$1
pattern=$2
tmp=/tmp/howto

echoerr() { echo "$@" 1>&2; }
usage() {
    echoerr 'Usage: '
    echoerr '    View     howto [filename]'
    echoerr '    Less     howto [-l filename]'
    echoerr '    Search   howto [-s pattern]'
    echoerr '    Edit     howto [-e filename]'
}
desktop_hint() {
    echo 'WIN+CTRL+2 for å vise desktop 2'
}

if [[ $file == '' ]]; then
    usage
    exit 1
fi

if [[ ! $file =~ ^[/.] ]]; then
    file="$dir/$file"
fi

mkdir $tmp &>/dev/null

filename=$(basename "$file")
extension="${filename##*.}"
filename="${filename%.*}"

if [[ $1 =~ ^-[els]$ ]]; then
    if [[ -z $pattern ]]; then
        usage
        exit 1
    fi

    file="$dir/$2"
    extension="${file##*.}"

    if [ $1 == '-e' ]; then
        vim $file
        exit
    fi

    if [ $1 == '-l' ]; then
        less -RFX $file
        exit
    fi
fi

if [ -f  "$file" ]; then
    echo $file
    case $extension in
        # File extensions må også oppdateres i _howto completion for zsh
        pdf)
            zathura "$file" &>/dev/null &
        ;;
        html|htm)
            chromium "$file" &>/dev/null &
            desktop_hint
        ;;
        xmind)
            XMind "$file" &>/dev/null &
        ;;
        chm)
            xchm "$file" &>/dev/null &
        ;;
        md)
            html=$tmp/${filename}.html
            if ! md2html &>/dev/null; then
                less -RFX "$file"
                exit
            fi 

            md2html "$file" $html >/dev/null
            chromium "$html" &>/dev/null &
            desktop_hint
        ;;
        txt)
            less -RFX "$file"
        ;;
        epub)
            lucidor "$file" &>/dev/null &
        ;;
        *)
            echoerr Unkown file type
            exit 1
        ;;
    esac
else
    echoerr "File not found: $file"
    exit 1
fi
